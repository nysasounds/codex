{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^snap/snapcraft.yaml$/"
      ],
      "matchStrings": [
        "source-tag: (?<currentValue>.*)"
      ],
      "depNameTemplate": "openai/codex",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "schedule": [
    "after 6pm"
  ]
}
